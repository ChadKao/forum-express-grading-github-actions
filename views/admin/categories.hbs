<h1>餐廳後台</h1>
{{#if category}}
  <form action="/admin/categories/{{category.id}}?_method=PUT" method="post">
    <div class="input-group">
      <input type="text" name="name" class="form-control me-3" placeholder="Category Name" value="{{category.name}}" required>
      <button type="submit" class="btn btn-primary me-3">update</button>
      <a href="/admin/categories">or Create New</a>
    </div>
  </form>
   {{else}}
      <form action="/admin/categories" method="post">
        <div class="input-group">
          <input type="text" name="name" class="form-control me-3" placeholder="Category Name">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
{{/if}}

<br />
{{> admin-restaurant-tabs route='categories'}}

<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>